.core
  display: flex
  gap 20px
  margin-top: 30px
  >div
    background-color #fff
    padding 20px
    padding-bottom 50px
    border-radius: 5px
    box-shadow: 0px 12px 24px 0px rgba(33,36,41,.2)
    width 100%
  .introduce
    max-width: 39.4%
    p
      &:last-of-type
        margin-top: 20px
  .form-container
    max-width: 60.6%
    h3
      margin-bottom 20px
  .container-img
    aspect-ratio: 406/270
    img
      width 100%
      height: 100%
      object-fit: cover
      border-radius: 5px
      margin-bottom 12px
  h3
    + p
      margin-top: 5px
      margin-bottom 10px
  
  .list-connect
    li
      max-width: 30px
      width 100%
      font-size: 0
      aspect-ratio: 1
      display: inline-block
      margin-right: 15px
      a
        height: 100%
        width 100%
        mask-size: cover !important
        transition background-color .15s ease-in
        background-color #000
        &:hover
          background-color #4831d4
    
    .linkedin
      mask url(../svg/icon-linkedin.svg) center no-repeat
    
    .email
      mask url(../svg/icon-email.svg) center no-repeat

@media only screen and (max-width: 767px)
  .core
    flex-direction: column

    .introduce,
    .form-container
      max-width: 100%
    
    .container-img
      aspect-ratio: 1.5/1
