.core
  display: flex
  flex-wrap: wrap
  margin-top: 30px
  gap 20px
  >li
    box-shadow: 0px 12px 24px 0px rgba(33,36,41,.2)
    max-width: calc(20% - 16px)
    width 100%
    padding 12px 12px 90px
    border-radius: 5px
    min-height: 360px
    position relative
    background-color #fff
    &:nth-of-type(7)
      section
        img
          object-fit: fill
    section
      display: flex
      flex-direction: column
      h3
        padding 0 3px
      :global(.btn)
        position: absolute
        width calc(100% - 24px)
        bottom 20px
        &::after
          content: "";
          display: block;
          position: absolute;
          top: calc(100% + 2px);
          left: calc(0% - 2px);
          width: calc(100% - 12px);
          border-top: 4px solid #000;
          border-left: 8px solid rgba(0,0,0,0);
          border-right: 8px solid rgba(0,0,0,0);
        &:hover
          background-color rgba(0,0,0,.16)

      img
        order -1
        border-radius: 3px
        aspect-ratio: 255/169
        object-fit: cover
        margin-bottom 10px

@media only screen and (max-width: 1699px)
  .core
    >li
      max-width: calc(25% - 15px)
      min-height: 330px

@media only screen and (max-width: 1279px)
  .core
    >li
      max-width: calc(33.333% - 13.333px)

@media only screen and (max-width: 767px)
  .core
    >li
      max-width: calc(50% - 10px)

@media only screen and (max-width: 500px)
  .core
    >li
      max-width: 100%
      min-height: 350px
      section
        img
          aspect-ratio: 2/1