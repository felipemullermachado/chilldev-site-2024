@import './fonts'

$color-purple = #4831d4
$color-white = #FFF

*, *:before
  box-sizing border-box

body, html
  overflow-x hidden
  font-size: 10px

button
  background none
  border none
  cursor pointer
  padding 0

a 
  display: inline-block
  text-decoration: none
  white-space: nowrap
  cursor pointer
  color currentColor

input,
select
	border: none;
	appearance: none
	&:focus
		background inherit
		outline: 0;

select
  cursor pointer

img
  display: block
  margin 0 auto
  max-width: 100%
  width 100%
  height: auto

strong
  font-weight: bold !important
  font-size: 1em

.block
  display: block

/* Font-sizes */  

body
  background #F9F9F9
  color #141c3a
  font-family 'Nunito Sans'

.color-purple
  color $color-purple

.color-white
  color $color-white

.bkg-color-purple
  background-color $color-purple


.title
  font-family 'Red Hat Display'
  font-weight 700
  font-size: 3.2rem
  line-height: 1.11em
  &.large-size
    font-size: 7.2rem
  &.little-size
    font-size: 1.9rem
    line-height: 1.333em

.title
  + p
    &:not(.no-margin)
      margin-top: 20px

p,
.text-size
  font-size: 1.8rem
  line-height: 1.5em
  &.large-size
    font-size: 2.1em

.text-center
  text-align: center

/* Container */

main
  > :first-child
    padding-top: 100px

.container
  display: block
  margin 0 auto
  width 100%
  max-width: 1548px // @proportional-skip
  padding-bottom 100px
  &.no-max
    max-width: 100%
  &.no-padding
    padding-bottom 0

div[class^="bkg-color-"]
  .container
    padding-top: 100px
    padding-bottom 100px

.btn
  border: 2px solid #000;
  padding: 10px 22px;
  font-weight: 700;
  font-size: 1.5rem; // @proportional-skip
  line-height: 1em;
  text-transform: uppercase;
  text-align center
  letter-spacing: .5px;
  transition: background-color .4s, border .4s, color .4s;
  position relative
  &::after
    content: "";
    display: block;
    position: absolute;
    bottom -6px
    left: 0;
    width: 100%;
    border-top: 4px solid #000;
    border-left: 8px solid rgba(0,0,0,0);
    border-right: 8px solid rgba(0,0,0,0);
    box-sizing: border-box
  &:hover
    background-color rgba(0,0,0,.16)

proportional(max-width 1699px, .8)

@media only screen and (max-width: 1699px)
  .container
    width 80%
  
  p,
  .text-size
    font-size: 1.9rem


@media only screen and (max-width: 1279px)
  body, html
    font-size: 10px

  main
    > :first-child
      padding-top: 60px
  
  .block-mobile
    display: block
    
  .container
    padding-bottom 60px
    width 100%
    padding-left: 20px
    padding-right: 20px
  
  .title
    &.large-size
      font-size: 4.5rem

  p,
  .text-size
    font-size: 1.6rem
    &.large-size
      font-size: 1.6rem

@media only screen and (max-width: 767px)
  main
    > :first-child
      padding-top: 50px
  
  .container
    padding-bottom 50px
  
  .title
    font-size: 2.8rem
    &.large-size
      font-size: 3.8rem
  
  .block-phone
    display: block
